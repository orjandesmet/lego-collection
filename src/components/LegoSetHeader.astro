---
type Props = {
  title: string;
  taxonomy?: string;
  wishlist?: boolean;
  backButton?: string;
};
const { title, taxonomy, wishlist, backButton } = Astro.props;
---

<header class="bg-black bg-opacity-10 p-4 dark:bg-white dark:bg-opacity-10">
  <div class="max-w-screen-md mx-auto px-2 flex flex-row gap-1">
    {
      backButton && (
        <a
          href={backButton}
          class="self-center border-t-4 border-l-4 border-solid border-sky-700 hover:border-sky-500 dark:boder-sky-300 h-4 w-4 -rotate-45"
        >
          &nbsp;
        </a>
      )
    }
    <div>
      {
        taxonomy && (
          <p class="text-sm text-gray-500 dark:text-slate-400">{taxonomy}</p>
        )
      }
      <h1
        data-wishlist={wishlist}
        class="text-xl font-bold text-sky-700 dark:text-sky-300"
      >
        {title}
        {wishlist}
      </h1>
    </div>
  </div>
</header>

<style>
  [data-wishlist='true']::before {
    content: 'â˜…';
    display: inline-block;
    margin-right: 4px;
    color: rgb(250, 202, 21);
  }
  [data-wishlist='true']:hover::before {
    animation-timing-function: ease;
    animation-iteration-count: infinite;
    animation-name: twoFrames;
    animation-duration: 2s;
    animation-delay: 3s;
  }

  @keyframes twoFrames {
    100% {
      transform: rotate(360deg);
    }
  }
</style>
